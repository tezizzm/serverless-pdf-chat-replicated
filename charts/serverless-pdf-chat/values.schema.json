{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["global", "aws"],
  "properties": {
    "global": {
      "type": "object",
      "properties": {
        "namePrefix": {
          "type": "string",
          "description": "Prefix for all resource names",
          "default": "pdf-chat"
        },
        "environment": {
          "type": "string",
          "description": "Environment name (dev, staging, prod, etc.)",
          "default": "dev"
        },
        "images": {
          "type": "object",
          "properties": {
            "registry": {
              "type": ["string", "null"],
              "description": "Global registry for all images"
            },
            "pullSecrets": {
              "type": "array",
              "description": "Global list of image pull secret names",
              "default": [],
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "images": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "description": "Base repository for all images",
          "default": "serverless-pdf-chat"
        },
        "tag": {
          "type": ["string", "null"],
          "description": "Default tag for all images",
          "default": null
        },
        "pullPolicy": {
          "type": "string",
          "description": "Image pull policy",
          "default": "IfNotPresent",
          "enum": ["Always", "IfNotPresent", "Never"]
        }
      }
    },
    "application": {
      "type": "object",
      "properties": {
        "config": {
          "type": "object",
          "properties": {
            "region": {
              "type": "string",
              "description": "AWS region for application resources",
              "default": "us-west-2"
            },
            "modelId": {
              "type": "string",
              "description": "Bedrock model ID for text generation",
              "default": "anthropic.claude-3-7-sonnet-20250219-v1:0"
            },
            "embeddingModelId": {
              "type": "string",
              "description": "Bedrock model ID for embeddings",
              "default": "amazon.titan-embed-text-v2:0"
            }
          }
        }
      }
    },
    "aws": {
      "type": "object",
      "required": ["s3", "dynamodb", "sqs", "iam", "lambda"],
      "properties": {
        "region": {
          "type": "string",
          "description": "AWS region for resources",
          "default": "us-west-2"
        },
        "accountId": {
          "type": "string",
          "description": "AWS account ID",
          "default": "123456789012"
        },
        "providerConfigName": {
          "type": "string",
          "description": "Name of the AWS provider configuration to use",
          "default": "default"
        },
        "ecrAccessToken": {
          "type": "string",
          "description": "ECR access token for authentication",
          "default": ""
        },
        "s3": {
          "type": "object",
          "properties": {
            "corsEnabled": {
              "type": "boolean",
              "description": "Enable CORS for the S3 bucket",
              "default": true
            },
            "versioning": {
              "type": "boolean",
              "description": "Enable versioning for the S3 bucket",
              "default": true
            },
            "lifecycleRules": {
              "type": "array",
              "description": "Lifecycle rules for the S3 bucket",
              "items": {
                "type": "object",
                "properties": {
                  "enabled": {
                    "type": "boolean",
                    "description": "Whether the rule is enabled",
                    "default": true
                  },
                  "expiration": {
                    "type": "integer",
                    "description": "Number of days after which objects expire",
                    "default": 90
                  }
                }
              }
            },
            "publicAccessBlockConfiguration": {
              "type": "object",
              "properties": {
                "blockPublicAcls": {
                  "type": "boolean",
                  "default": true
                },
                "blockPublicPolicy": {
                  "type": "boolean",
                  "default": true
                },
                "ignorePublicAcls": {
                  "type": "boolean",
                  "default": true
                },
                "restrictPublicBuckets": {
                  "type": "boolean",
                  "default": true
                }
              }
            }
          }
        },
        "dynamodb": {
          "type": "object",
          "required": ["documentTable", "memoryTable", "billingMode"],
          "properties": {
            "documentTable": {
              "type": "object",
              "properties": {
                "name": {
                  "type": ["string", "null"],
                  "description": "Custom name for the document table. If empty, a name will be generated."
                }
              }
            },
            "memoryTable": {
              "type": "object",
              "properties": {
                "name": {
                  "type": ["string", "null"],
                  "description": "Custom name for the memory table. If empty, a name will be generated."
                }
              }
            },
            "billingMode": {
              "type": "string",
              "enum": ["PROVISIONED", "PAY_PER_REQUEST"],
              "default": "PAY_PER_REQUEST"
            }
          }
        },
        "sqs": {
          "type": "object",
          "required": ["embeddingQueue"],
          "properties": {
            "embeddingQueue": {
              "type": "object",
              "properties": {
                "name": {
                  "type": ["string", "null"],
                  "description": "Custom name for the embedding queue. If empty, a name will be generated."
                },
                "visibilityTimeout": {
                  "type": "integer",
                  "description": "The visibility timeout for the queue in seconds",
                  "default": 180
                },
                "messageRetentionPeriod": {
                  "type": "integer",
                  "description": "The message retention period in seconds",
                  "default": 3600
                }
              }
            }
          }
        },
        "iam": {
          "type": "object",
          "required": ["roles"],
          "properties": {
            "roles": {
              "type": "object",
              "required": ["lambdaRole"],
              "properties": {
                "lambdaRole": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": ["string", "null"],
                      "description": "Name of the Lambda execution role. If null, a name will be generated."
                    },
                    "policies": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": ["string", "null"],
                          "description": "Name of the policy. If null, a default name will be used."
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "lambda": {
          "type": "object",
          "required": ["runtime", "handler", "functions"],
          "properties": {
            "runtime": {
              "type": "string",
              "description": "Lambda runtime environment",
              "default": "python3.11"
            },
            "handler": {
              "type": "string",
              "description": "Lambda handler function",
              "default": "lambda_function.lambda_handler"
            },
            "timeout": {
              "type": "integer",
              "description": "Default Lambda timeout in seconds",
              "default": 30
            },
            "memorySize": {
              "type": "integer",
              "description": "Default Lambda memory size in MB",
              "default": 256
            },
            "functions": {
              "type": "object",
              "required": ["uploadTrigger", "generatePresignedUrl", "generateEmbeddings", "getDocument", "getAllDocuments", "deleteDocument", "addConversation", "generateResponse"],
              "properties": {
                "uploadTrigger": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": ["string", "null"],
                      "description": "Custom name for the function. If null, a name will be generated."
                    },
                    "description": {
                      "type": "string",
                      "description": "Description of the function"
                    },
                    "timeout": {
                      "type": "integer",
                      "description": "Function timeout in seconds"
                    },
                    "memorySize": {
                      "type": "integer",
                      "description": "Function memory size in MB"
                    },
                    "repository": {
                      "type": "string",
                      "description": "Repository for the function image"
                    },
                    "tag": {
                      "type": ["string", "null"],
                      "description": "Tag for the function image"
                    },
                    "environment": {
                      "type": "array",
                      "description": "Function-specific environment variables",
                      "items": {
                        "type": "object",
                        "additionalProperties": {
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "generatePresignedUrl": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": ["string", "null"],
                      "description": "Custom name for the function. If null, a name will be generated."
                    },
                    "description": {
                      "type": "string",
                      "description": "Description of the function"
                    },
                    "timeout": {
                      "type": "integer",
                      "description": "Function timeout in seconds"
                    },
                    "memorySize": {
                      "type": "integer",
                      "description": "Function memory size in MB"
                    },
                    "repository": {
                      "type": "string",
                      "description": "Repository for the function image"
                    },
                    "tag": {
                      "type": ["string", "null"],
                      "description": "Tag for the function image"
                    },
                    "environment": {
                      "type": "array",
                      "description": "Function-specific environment variables",
                      "items": {
                        "type": "object",
                        "additionalProperties": {
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "generateEmbeddings": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": ["string", "null"],
                      "description": "Custom name for the function. If null, a name will be generated."
                    },
                    "description": {
                      "type": "string",
                      "description": "Description of the function"
                    },
                    "timeout": {
                      "type": "integer",
                      "description": "Function timeout in seconds"
                    },
                    "memorySize": {
                      "type": "integer",
                      "description": "Function memory size in MB"
                    },
                    "repository": {
                      "type": "string",
                      "description": "Repository for the function image"
                    },
                    "tag": {
                      "type": ["string", "null"],
                      "description": "Tag for the function image"
                    },
                    "environment": {
                      "type": "array",
                      "description": "Function-specific environment variables",
                      "items": {
                        "type": "object",
                        "additionalProperties": {
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "getDocument": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": ["string", "null"],
                      "description": "Custom name for the function. If null, a name will be generated."
                    },
                    "description": {
                      "type": "string",
                      "description": "Description of the function"
                    },
                    "timeout": {
                      "type": "integer",
                      "description": "Function timeout in seconds"
                    },
                    "memorySize": {
                      "type": "integer",
                      "description": "Function memory size in MB"
                    },
                    "repository": {
                      "type": "string",
                      "description": "Repository for the function image"
                    },
                    "tag": {
                      "type": ["string", "null"],
                      "description": "Tag for the function image"
                    },
                    "environment": {
                      "type": "array",
                      "description": "Function-specific environment variables",
                      "items": {
                        "type": "object",
                        "additionalProperties": {
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "getAllDocuments": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": ["string", "null"],
                      "description": "Custom name for the function. If null, a name will be generated."
                    },
                    "description": {
                      "type": "string",
                      "description": "Description of the function"
                    },
                    "timeout": {
                      "type": "integer",
                      "description": "Function timeout in seconds"
                    },
                    "memorySize": {
                      "type": "integer",
                      "description": "Function memory size in MB"
                    },
                    "repository": {
                      "type": "string",
                      "description": "Repository for the function image"
                    },
                    "tag": {
                      "type": ["string", "null"],
                      "description": "Tag for the function image"
                    },
                    "environment": {
                      "type": "array",
                      "description": "Function-specific environment variables",
                      "items": {
                        "type": "object",
                        "additionalProperties": {
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "deleteDocument": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": ["string", "null"],
                      "description": "Custom name for the function. If null, a name will be generated."
                    },
                    "description": {
                      "type": "string",
                      "description": "Description of the function"
                    },
                    "timeout": {
                      "type": "integer",
                      "description": "Function timeout in seconds"
                    },
                    "memorySize": {
                      "type": "integer",
                      "description": "Function memory size in MB"
                    },
                    "repository": {
                      "type": "string",
                      "description": "Repository for the function image"
                    },
                    "tag": {
                      "type": ["string", "null"],
                      "description": "Tag for the function image"
                    },
                    "environment": {
                      "type": "array",
                      "description": "Function-specific environment variables",
                      "items": {
                        "type": "object",
                        "additionalProperties": {
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "addConversation": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": ["string", "null"],
                      "description": "Custom name for the function. If null, a name will be generated."
                    },
                    "description": {
                      "type": "string",
                      "description": "Description of the function"
                    },
                    "timeout": {
                      "type": "integer",
                      "description": "Function timeout in seconds"
                    },
                    "memorySize": {
                      "type": "integer",
                      "description": "Function memory size in MB"
                    },
                    "repository": {
                      "type": "string",
                      "description": "Repository for the function image"
                    },
                    "tag": {
                      "type": ["string", "null"],
                      "description": "Tag for the function image"
                    },
                    "environment": {
                      "type": "array",
                      "description": "Function-specific environment variables",
                      "items": {
                        "type": "object",
                        "additionalProperties": {
                          "type": "string"
                        }
                      }
                    }
                  }
                },
                "generateResponse": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": ["string", "null"],
                      "description": "Custom name for the function. If null, a name will be generated."
                    },
                    "description": {
                      "type": "string",
                      "description": "Description of the function"
                    },
                    "timeout": {
                      "type": "integer",
                      "description": "Function timeout in seconds"
                    },
                    "memorySize": {
                      "type": "integer",
                      "description": "Function memory size in MB"
                    },
                    "repository": {
                      "type": "string",
                      "description": "Repository for the function image"
                    },
                    "tag": {
                      "type": ["string", "null"],
                      "description": "Tag for the function image"
                    },
                    "environment": {
                      "type": "array",
                      "description": "Function-specific environment variables",
                      "items": {
                        "type": "object",
                        "additionalProperties": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "frontend": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether to deploy the frontend",
          "default": true
        },
        "image": {
          "type": "object",
          "properties": {
            "registry": {
              "type": ["string", "null"],
              "description": "Container registry for frontend image. If null, will use AWS ECR",
              "default": null
            },
            "repository": {
              "type": ["string", "null"],
              "description": "Repository name for the frontend image. If null, will use images.repository/frontend",
              "default": null
            },
            "tag": {
              "type": ["string", "null"],
              "description": "Tag for the frontend image. If null, will use Chart.AppVersion",
              "default": null
            },
            "pullPolicy": {
              "type": "string",
              "description": "Image pull policy",
              "default": "IfNotPresent",
              "enum": ["Always", "IfNotPresent", "Never"]
            },
            "pullSecrets": {
              "type": "array",
              "description": "List of existing image pull secret names",
              "default": [],
              "items": {
                "type": "string"
              }
            }
          }
        },
        "builderImage": {
          "type": "object",
          "properties": {
            "registry": {
              "type": ["string", "null"],
              "description": "Container registry for frontend builder image. If null, will use AWS ECR",
              "default": null
            },
            "repository": {
              "type": ["string", "null"],
              "description": "Repository name for the frontend builder image. If null, will use images.repository/builder",
              "default": null
            },
            "tag": {
              "type": ["string", "null"],
              "description": "Tag for the frontend builder image. If null, will use Chart.AppVersion",
              "default": null
            },
            "pullPolicy": {
              "type": "string",
              "description": "Image pull policy",
              "default": "IfNotPresent",
              "enum": ["Always", "IfNotPresent", "Never"]
            },
            "pullSecrets": {
              "type": "array",
              "description": "List of existing image pull secret names for builder image",
              "default": [],
              "items": {
                "type": "string"
              }
            }
          }
        },
        "builderResources": {
          "type": "object",
          "description": "Resource limits and requests for the builder container",
          "properties": {
            "limits": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string",
                  "description": "CPU limit",
                  "default": "1"
                },
                "memory": {
                  "type": "string",
                  "description": "Memory limit",
                  "default": "2Gi"
                }
              }
            },
            "requests": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string",
                  "description": "CPU request",
                  "default": "500m"
                },
                "memory": {
                  "type": "string",
                  "description": "Memory request",
                  "default": "1Gi"
                }
              }
            }
          }
        },
        "replicaCount": {
          "type": "integer",
          "description": "Number of frontend replicas",
          "default": 1
        },
        "resources": {
          "type": "object",
          "description": "Resource limits and requests",
          "properties": {
            "limits": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string",
                  "description": "CPU limit",
                  "default": "200m"
                },
                "memory": {
                  "type": "string",
                  "description": "Memory limit",
                  "default": "256Mi"
                }
              }
            },
            "requests": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": "string",
                  "description": "CPU request",
                  "default": "100m"
                },
                "memory": {
                  "type": "string",
                  "description": "Memory request",
                  "default": "128Mi"
                }
              }
            }
          }
        },
        "autoscaling": {
          "type": "object",
          "description": "Autoscaling configuration",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable autoscaling",
              "default": false
            },
            "minReplicas": {
              "type": "integer",
              "description": "Minimum number of replicas",
              "default": 1
            },
            "maxReplicas": {
              "type": "integer",
              "description": "Maximum number of replicas",
              "default": 5
            },
            "targetCPUUtilizationPercentage": {
              "type": "integer",
              "description": "Target CPU utilization percentage",
              "default": 80
            }
          }
        },
        "podSecurityContext": {
          "type": "object",
          "description": "Pod security context"
        },
        "securityContext": {
          "type": "object",
          "description": "Container security context"
        },
        "nodeSelector": {
          "type": "object",
          "description": "Node selector"
        },
        "tolerations": {
          "type": "array",
          "description": "Tolerations"
        },
        "affinity": {
          "type": "object",
          "description": "Affinity rules"
        },
        "podAnnotations": {
          "type": "object",
          "description": "Pod annotations"
        },
        "service": {
          "type": "object",
          "description": "Service configuration",
          "properties": {
            "type": {
              "type": "string",
              "description": "Service type",
              "default": "ClusterIP",
              "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
            },
            "port": {
              "type": "integer",
              "description": "Service port",
              "default": 80
            },
            "annotations": {
              "type": "object",
              "description": "Service annotations"
            },
            "nodePort": {
              "type": ["integer", "string", "null"],
              "description": "Node port when service type is NodePort"
            }
          }
        },
        "ingress": {
          "type": "object",
          "description": "Ingress configuration",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable ingress",
              "default": true
            },
            "className": {
              "type": "string",
              "description": "Ingress class name",
              "default": "nginx"
            },
            "annotations": {
              "type": "object",
              "description": "Ingress annotations"
            },
            "hosts": {
              "type": "array",
              "description": "Ingress hosts",
              "items": {
                "type": "object",
                "properties": {
                  "host": {
                    "type": "string",
                    "description": "Hostname"
                  },
                  "paths": {
                    "type": "array",
                    "description": "Paths",
                    "items": {
                      "type": "object",
                      "properties": {
                        "path": {
                          "type": "string",
                          "description": "Path"
                        },
                        "pathType": {
                          "type": "string",
                          "description": "Path type",
                          "enum": ["Prefix", "Exact", "ImplementationSpecific"]
                        }
                      }
                    }
                  }
                }
              }
            },
            "tls": {
              "type": "array",
              "description": "TLS configuration",
              "items": {
                "type": "object",
                "properties": {
                  "secretName": {
                    "type": "string",
                    "description": "TLS secret name"
                  },
                  "hosts": {
                    "type": "array",
                    "description": "TLS hosts",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "tags": {
      "type": "object",
      "description": "Tags to apply to all resources",
      "additionalProperties": {
        "type": "string"
      }
    },
    "tls": {
      "type": "object",
      "description": "TLS certificate configuration",
      "properties": {
        "cert": {
          "type": "string",
          "description": "TLS certificate in PEM format"
        },
        "key": {
          "type": "string",
          "description": "TLS private key in PEM format"
        },
        "ca": {
          "type": "string",
          "description": "CA certificate in PEM format (optional)"
        }
      },
      "required": ["cert", "key"]
    }
  }
}
