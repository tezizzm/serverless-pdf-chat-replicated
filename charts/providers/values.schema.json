{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "properties": {
        "images": {
          "type": "object",
          "properties": {
            "registry": {
              "type": "string",
              "description": "Global registry configuration. When set, overrides individual registry settings unless specifically overridden at the component level"
            }
          }
        }
      }
    },
    "nameOverride": {
      "type": "string",
      "description": "Override the name of the chart"
    },
    "fullnameOverride": {
      "type": "string",
      "description": "Override the full name of the chart"
    },
    "commonLabels": {
      "type": "object",
      "description": "Common labels to add to all resources",
      "additionalProperties": {
        "type": "string"
      }
    },
    "commonAnnotations": {
      "type": "object",
      "description": "Common annotations to add to all resources",
      "additionalProperties": {
        "type": "string"
      }
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean",
          "description": "Specifies whether a ServiceAccount should be created",
          "default": true
        },
        "name": {
          "type": "string",
          "description": "The name of the ServiceAccount to use. If not set and create is true, a name is generated."
        }
      }
    },
    "jobs": {
      "type": "object",
      "properties": {
        "waitReadyJob": {
          "type": "object",
          "properties": {
            "image": {
              "type": "object",
              "properties": {
                "registry": {
                  "type": "string",
                  "description": "Registry for the wait-ready job image",
                  "default": "docker.io"
                },
                "repository": {
                  "type": "string",
                  "description": "Repository for the wait-ready job image",
                  "default": "bitnami/kubectl"
                },
                "tag": {
                  "type": "string",
                  "description": "Tag for the wait-ready job image",
                  "default": "latest"
                },
                "pullPolicy": {
                  "type": "string",
                  "description": "Image pull policy for the wait-ready job",
                  "default": "IfNotPresent",
                  "enum": ["Always", "IfNotPresent", "Never"]
                }
              }
            },
            "resources": {
              "type": "object",
              "properties": {
                "limits": {
                  "type": "object",
                  "properties": {
                    "cpu": {
                      "type": "string",
                      "description": "CPU limit for wait-ready job",
                      "default": "200m"
                    },
                    "memory": {
                      "type": "string",
                      "description": "Memory limit for wait-ready job",
                      "default": "256Mi"
                    }
                  }
                },
                "requests": {
                  "type": "object",
                  "properties": {
                    "cpu": {
                      "type": "string",
                      "description": "CPU request for wait-ready job",
                      "default": "100m"
                    },
                    "memory": {
                      "type": "string",
                      "description": "Memory request for wait-ready job",
                      "default": "128Mi"
                    }
                  }
                }
              }
            },
            "securityContext": {
              "type": "object",
              "properties": {
                "runAsNonRoot": {
                  "type": "boolean",
                  "description": "Run wait-ready job as non-root",
                  "default": true
                },
                "runAsUser": {
                  "type": "integer",
                  "description": "User ID to run wait-ready job",
                  "default": 1001
                },
                "runAsGroup": {
                  "type": "integer",
                  "description": "Group ID to run wait-ready job",
                  "default": 1001
                }
              }
            }
          }
        }
      }
    },
    "aws": {
      "type": "object",
      "properties": {
        "deploymentRuntimeConfig": {
          "type": "object",
          "properties": {
            "resources": {
              "type": "object",
              "properties": {
                "limits": {
                  "type": "object",
                  "properties": {
                    "cpu": {
                      "type": "string",
                      "description": "CPU limit for provider controllers",
                      "default": "500m"
                    },
                    "memory": {
                      "type": "string",
                      "description": "Memory limit for provider controllers",
                      "default": "512Mi"
                    }
                  }
                },
                "requests": {
                  "type": "object",
                  "properties": {
                    "cpu": {
                      "type": "string",
                      "description": "CPU request for provider controllers",
                      "default": "100m"
                    },
                    "memory": {
                      "type": "string",
                      "description": "Memory request for provider controllers",
                      "default": "256Mi"
                    }
                  }
                }
              }
            },
            "securityContext": {
              "type": "object",
              "properties": {
                "runAsNonRoot": {
                  "type": "boolean",
                  "description": "Run provider controllers as non-root",
                  "default": true
                },
                "runAsUser": {
                  "type": "integer",
                  "description": "User ID to run provider controllers",
                  "default": 65532
                },
                "runAsGroup": {
                  "type": "integer",
                  "description": "Group ID to run provider controllers",
                  "default": 65532
                }
              }
            }
          }
        },
        "providers": {
          "type": "object",
          "properties": {
            "registry": {
              "type": "string",
              "description": "Registry for all providers",
              "default": "xpkg.upbound.io/upbound"
            },
            "family": {
              "type": "object",
              "properties": {
                "package": {
                  "type": "string",
                  "description": "Package name for the AWS Family provider",
                  "default": "provider-family-aws"
                },
                "version": {
                  "type": "string",
                  "description": "Version of the AWS Family provider",
                  "default": "v1.21.1"
                }
              }
            },
            "iam": {
              "type": "object",
              "properties": {
                "package": {
                  "type": "string",
                  "description": "Package name for the IAM provider",
                  "default": "provider-aws-iam"
                },
                "version": {
                  "type": "string",
                  "description": "Version of the IAM provider",
                  "default": "v1.21.1"
                }
              }
            },
            "s3": {
              "type": "object",
              "properties": {
                "package": {
                  "type": "string",
                  "description": "Package name for the S3 provider",
                  "default": "provider-aws-s3"
                },
                "version": {
                  "type": "string",
                  "description": "Version of the S3 provider",
                  "default": "v1.21.1"
                }
              }
            },
            "dynamodb": {
              "type": "object",
              "properties": {
                "package": {
                  "type": "string",
                  "description": "Package name for the DynamoDB provider",
                  "default": "provider-aws-dynamodb"
                },
                "version": {
                  "type": "string",
                  "description": "Version of the DynamoDB provider",
                  "default": "v1.21.1"
                }
              }
            },
            "lambda": {
              "type": "object",
              "properties": {
                "package": {
                  "type": "string",
                  "description": "Package name for the Lambda provider",
                  "default": "provider-aws-lambda"
                },
                "version": {
                  "type": "string",
                  "description": "Version of the Lambda provider",
                  "default": "v1.21.1"
                }
              }
            },
            "sqs": {
              "type": "object",
              "properties": {
                "package": {
                  "type": "string",
                  "description": "Package name for the SQS provider",
                  "default": "provider-aws-sqs"
                },
                "version": {
                  "type": "string",
                  "description": "Version of the SQS provider",
                  "default": "v1.21.1"
                }
              }
            },
            "apigatewayv2": {
              "type": "object",
              "properties": {
                "package": {
                  "type": "string",
                  "description": "Package name for the API Gateway v2 provider",
                  "default": "provider-aws-apigatewayv2"
                },
                "version": {
                  "type": "string",
                  "description": "Version of the API Gateway v2 provider",
                  "default": "v1.21.1"
                }
              }
            },
            "cognitoidp": {
              "type": "object",
              "properties": {
                "package": {
                  "type": "string",
                  "description": "Package name for the Cognito IDP provider",
                  "default": "provider-aws-cognitoidp"
                },
                "version": {
                  "type": "string",
                  "description": "Version of the Cognito IDP provider",
                  "default": "v1.21.1"
                }
              }
            }
          }
        }
      }
    },
    "kubernetes": {
      "type": "object",
      "properties": {
        "provider": {
          "type": "object",
          "properties": {
            "version": {
              "type": "string",
              "description": "Version of the Kubernetes provider",
              "default": "v0.17.2"
            },
            "registry": {
              "type": "string",
              "description": "Registry for the Kubernetes provider",
              "default": "xpkg.upbound.io/upbound"
            }
          }
        }
      }
    }
  }
}
